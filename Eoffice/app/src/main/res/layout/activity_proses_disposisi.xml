<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btKirimDisposisi"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/tglwaktupendisposisi"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/custom_border"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tanggal"
                    android:textSize="14dp"
                    android:id="@+id/tvTanggalDisposisi"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:textSize="14dp"
                    android:id="@+id/tvtitik2"
                    android:paddingLeft="120dp"
                    android:textColor="#000000"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvtitik2"
                    android:id="@+id/editIsiTanggalDisposisi"
                    android:editable="false"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/bg_edittext"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/custom_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Waktu"
                    android:textSize="14dp"
                    android:id="@+id/tvWaktuDisposisi"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:textSize="14dp"
                    android:id="@+id/tvtitik21"
                    android:paddingLeft="120dp"
                    android:textColor="#000000"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editIsiWaktuDisposisi"
                    android:layout_toRightOf="@+id/tvtitik21"
                    android:editable="false"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/bg_edittext"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/custom_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Pengirim"
                    android:textSize="14dp"
                    android:id="@+id/tvPetugas"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:textSize="14dp"
                    android:id="@+id/tvtitik22"
                    android:paddingLeft="120dp"
                    android:textColor="#000000"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spPetugas"
                    android:layout_toRightOf="@+id/tvtitik22"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/custom_border"
                android:id="@+id/rlJenisDokumen"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Jenis Dokumen"
                    android:textSize="14dp"
                    android:id="@+id/tvJenisDokumen"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:textSize="14dp"
                    android:id="@+id/tvtitik23"
                    android:paddingLeft="120dp"
                    android:textColor="#000000"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spJenisDokumen"
                    android:layout_toRightOf="@+id/tvtitik23"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/custom_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Daftar sirkulasi"
                    android:textSize="14dp"
                    android:paddingBottom="10dp"
                    android:textColor="#000000"
                    android:id="@+id/tvPenerima"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_add"
                    android:id="@+id/ivAddDisposisi"
                    android:layout_alignParentRight="true"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvListDisposisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPenerima"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Kirim sirkulasi"
        android:id="@+id/btKirimDisposisi"
        android:layout_alignParentBottom="true"
        android:background="#e5b652"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/ic_send"
        android:padding="5dp"
        />

</RelativeLayout>
