<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/checklistagree"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/disclaim"/>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checklistagree"
        android:orientation="horizontal"
        android:layout_above="@+id/btAgree"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbAgree"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nextFocusRight="@id/cbAgree"
            android:text="Saya Setuju"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btAgree"
        android:text="Setuju"
        android:background="#e5b652"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        />
</RelativeLayout>