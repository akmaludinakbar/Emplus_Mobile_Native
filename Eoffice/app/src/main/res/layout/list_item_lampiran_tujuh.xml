<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/ivDokumen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_word"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="85dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/ivDokumen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvJudulDokumen"
            android:text="Perubahan Rate di BNI Forum.doc"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTanggalDokumen"
            android:text="2 Juni 2016"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivDownload"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_tracking"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>